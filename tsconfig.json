{
    "compilerOptions": {
        "baseUrl": "./src/frontend",
        "outDir": "./dist/",
        "noImplicitAny": false,
        "module": "ES2020",
        "target": "ES2020",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "paths": {
            "js/*": [
                "js/*"
            ],
            "components/*": [
                "components/*"
            ],
            "util/*": [
                "js/lib/util/*"
            ],
            "component": [
                "js/lib/component"
            ],
            "validation": [
                "js/lib/validation"
            ],
            "logging": [
                "js/lib/logging"
            ],
        }
    },
    "include": [
        "src/frontend/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/**/*.test.ts",
        "src/**/*.definitions.ts"
    ]
}
