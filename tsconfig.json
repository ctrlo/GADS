{
  "compilerOptions": {
    "baseUrl": "./src/frontend",
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "ES2020",
    "target": "ES2020",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "js/*": [
        "src/frontend/js/*"
      ],
      "components/*": [
        "src/frontend/components/*"
      ],
      "util/*" : [
        "js/lib/util/*"
      ],
      "component": [
        "js/lib/component"
      ],
      "validation": [
        "js/lib/validation"
      ],
    }
  },
  "include": [
    "src/frontend/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test.ts",
  ]
}
