                            <div class="filter" data-builder-id="[% instance_layout.instance_id %]" id="builder[% instance_layout.instance_id %]"></div>
                          </div>
                        </fieldset>
                      </div>
                    </div>
                  </div>
                  [% END %]
                </div>
                <input id="filter" type="hidden" name="filter" value="">
