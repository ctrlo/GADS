<form class="login__form" method="post" autocomplete="off">
  [% PROCESS snippets/message_center.tt %]

  <div class="login__head">
    <h1 class="login__title">
      Please sign in
    </h2>
  </div>

  <div class="login__fields">
    <fieldset class="fieldset">
      <legend class="fieldset__legend fieldset__legend--hidden">
        Login
      </legend>
      [%
        INCLUDE fields/hidden.tt name="csrf_token" value=csrf_token;

        INCLUDE fields/input.tt
          id = "username"
          name = "username"
          value = username
          label = "Email address"
          placeholder = "name@example.com"
          type = "email"
          tabindex = 1
          sub_field = "fields/sub/checkbox.tt"
          sub_params = {
            id => "remember"
            name => "remember_me"
            label => "Remember email address"
            checked => username
            tabindex => 2
          };

      %]
    </fieldset>
  </div>

  <div class="login__btns">
    <button tabindex="4" type="submit" name="login" formaction="login" value="1" class="btn btn-default">
      <span class="btn__title">Sign in via SAML</span>
    </button>
  </div>
</form>

<div class="login__subtext">
  <a href="[% url.page %]/login?password=1">Login locally</a>
</div>
[% UNLESS site.hide_account_request %]
<div class="login__subtext">
  <a href="[% url.page %]/register">Request an account</a>
</div>
[% END %]
