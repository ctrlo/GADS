                                <span class="fa fa-hand-paper-o fa-lg use-icon-font close drag" style="float:none"></span>
                            </p>
                        </div>
                    ' );
                    $('.sortable').sortable('refresh');
                });
                $('#refers_to_instance_id').change(function(){
                    var divid = '#instance_fields_' + $(this).val();
                    $('.instance_fields').hide();
                    $(divid).show();
                });
                $('#related_field_id').change(function(){
                    var divid = $(this).find(':selected').data('instance_id');
                    $('.autocur_instance').hide();
                    $('#autocur_instance_' + divid).show();
                });

                [% FOREACH instance_layout IN instance_layouts %]
                    [% PROCESS builder.tt builder_id = instance_layout.instance_id builder_layout = instance_layout filter_normal = column.filter filter_base64 = column.filter.base64 %]
                [% END %]
                [% IF column.filter.as_json AND NOT column.filter.as_json.match('^[{}\s]*$') %]
                    var data = base64.decode('[% column.filter.base64 %]');
                    $('#builder[% column.refers_to_instance_id %]').queryBuilder('setRules',
                        JSON.parse(data)
                    );
