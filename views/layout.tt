                        var v =$("#jstree_demo_div").jstree(true).get_json('#', { 'flat': false });
                        var mytext = JSON.stringify(v);
                        $.ajax({
                            async: false,
                            type: "POST",
                            url: "/tree/[% column.id %]",
                            data: {'data': mytext }
                        }).done(function( data ) {
                            alert( "Tree has been updated" );
                        });
                        return true;
                    } else if ($(current_builder).is(":visible")) {
                        UpdateFilter($(current_builder));
                    }
                    return true;
                });

                $('#type').on('change', function () {
