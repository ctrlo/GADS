                if(!sel.length) { return false; }
                ref.delete_node(sel);
            };
            function demo_create() {
                var ref = $('#jstree_demo_div').jstree(true),
                    sel = ref.get_selected();
                if(sel.length) {
                    sel = sel[0];
                } else {
                    sel = '#';
                }
                sel = ref.create_node(sel, {"type":"file"});
                if(sel) {
                    ref.edit(sel);
                }
            };
            function demo_rename() {
                var ref = $('#jstree_demo_div').jstree(true),
                    sel = ref.get_selected();
                if(!sel.length) { return false; }
                sel = sel[0];
                ref.edit(sel);
