                        $('.check_perm').prop('checked', false);
                    } else {
                        $('.check_perm').prop('checked', true);
                    }
                });
            $(document).ready(function () {
                $('.sortable').sortable({
                    handle: ".drag"
                });
                $('#display_condition').click(function () {
                    $("#display_condition_div").toggle(400);
                });
                $('#jstree_demo_div').jstree({
                    "core" : {
